<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Week</th>
      <th>Day</th>
      <th>Soup1</th>
      <th>Soup2</th>
      <th>Food1</th>
      <th>Food2</th>
      <th>Food3</th>
      <th>Food4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.week_id %></td>
        <td><%= meal.day_id %></td>
        <td><%= meal.soup1_id %></td>
        <td><%= meal.soup2_id %></td>
        <td><%= meal.food1_id %></td>
        <td><%= meal.food2_id %></td>
        <td><%= meal.food3_id %></td>
        <td><%= meal.food4_id %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path %>
